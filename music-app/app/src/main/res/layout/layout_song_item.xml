<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/song_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/common_song_cover_img"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/jay1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/common_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="@integer/text_view_max_one_line"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:text="晴天"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/common_song_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周杰伦"
            android:textColor="@color/weiy_gray_color"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="end|center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/common_is_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/content_description_like"
            app:srcCompat="@drawable/favorite_border" />

        <ImageView
            android:id="@+id/common_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/content_description_download"
            app:srcCompat="@drawable/download" />
    </LinearLayout>

</LinearLayout>